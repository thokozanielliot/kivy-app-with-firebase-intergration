<SignInScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#ffffff") #9400d3  #9400d3
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#add8e6") #1478a7
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 1
            cols: 2
            size_hint: 1, .1
            pos_hint: {"center_x": .5, "center_y": .96}
            Label:
                #pos_hint: {"center_x": .5, "center_y": .9}
                size_hint: .1, .1
                text: "[b]Sign In Page[/b]"
                markup: True
                color: 0, 0, 0, 1
                id: signin_title
                #Put label for the home page
        Image:
            #sign in logo
            source: "images/emuLogo.png"
            size_hint: .2, .2
            pos_hint: {"center_x": .5, "center_y": .8}
            keep_ratio: True
        GridLayout:
            #welcome banner
            rows: 2
            size_hint: .1, .1
            pos_hint: {"center_x": .5, "center_y": .65}
            Label:
                text: "[b]Welcome[/b]"
                color: 0, 0, 0, 1
                markup: True
            Label:
                text: "[b]Sign In to Continue[/b]"
                markup: True
                color: 0, 0, 0, 1
        Label:
            id: signin_message
            text: ""
            markup: True
            color: 0, 0, 0, 1
            size_hint: .1, .1
            pos_hint: {"center_x": .5, "center_y": .18}
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#add8e6")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
            #user details grid
            rows: 1
            size_hint: .4, .05
            pos_hint: {"center_x": .5, "center_y": .5}
            #space: 25
            TextInput:
                background_color: 1, 1, 1, 0
                id: username
                hint_text: "username"
                multiline: False
                focus: True
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#add8e6")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
            rows: 1
            size_hint: .4, .05
            pos_hint: {"center_x": .5, "center_y": .43}
            TextInput:
                background_color: 1, 1, 1, 0
                id: password
                hint_text: "password"
                password: True
                multiline: False
                focus: True
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#add8e6") #0b5394 #if self.state == 'normal' else utils.get_color_from_hex("#9400d3")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20,]
            #sign in button
            rows: 1
            size_hint: .2, .055
            pos_hint: {"center_x": .5, "center_y": .35}
            Button:
                text: "Sign In"
                background_color: 1, 1, 1, 0
                #size_hint: .1, .1
                color: 0, 0, 0, 1
                on_press:
                    app.my_firebase.sign_up(username.text, password.text)
                    #print("Sign up", username.text, password.text)
                #on_release: app.change_screen("dashboard_screen")
        GridLayout:
            rows: 1
            size_hint: .3, .035
            pos_hint: {"center_x": .5, "center_y": .28}
            Button:
                text: "Forgot Password?"
                markup: True
                color: 0, 0, 0, 1
                #put text color to
                background_color: 1, 1, 1, 0
                on_press: print("forgot")
        #Label:
        #    text: "Don't have an account?"
        #    pos_hint: {"center_x": .46, "center_y": .25}
        #    color: 0, 0, 0, 1
        Button:
            #Register button
            text: "Don't have an account? Register"
            color: 0, 0, 0, 1
            #put text color to
            background_color: 1, 1, 1, 0
            size_hint: .07, .035
            pos_hint: {"center_x": .5, "center_y": .25}
            on_press:
                app.change_screen("register_screen")
    #Button:
    #   text: "sign in screen"
    #    on_release:
    #        app.change_screen("home_screen")