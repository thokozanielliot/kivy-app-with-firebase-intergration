<RegisterScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#ffffff") #add8e6  #9400d3  #9400d3
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#338bab") #1478a7
                Rectangle:
                    size: self.size
                    pos: self.pos
            #dash board banner
            rows: 1
            #cols: 2
            size_hint: 1, .1
            pos_hint: {"center_x": .5, "center_y": .96}
            Label:
                #pos_hint: {"center_x": .5, "center_y": .9}
                size_hint: .1, .1
                text: "[b]Registration[/b]"
                markup: True
                color: 0, 0, 0, 1
        GridLayout:
            rows: 1
            size_hint: .05, .05
            pos_hint: {"center_x": .03, "center_y": .96}
            ImageButton:
                source: "icons/back.jpg"
                on_press: app.change_screen("signin_screen")
        GridLayout:
            rows: 1
            size_hint : .3, .2
            pos_hint: {'center_x': .5, 'center_y': .8}
            Label:
                text: "Please enter your personal information"
                color: 0, 0, 0, 1
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#add8e6")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
            rows: 1
            size_hint: .4, .05
            pos_hint: {"center_x": .5, "center_y": .7}
            TextInput:
                background_color: 1, 1, 1, 0
                id: email
                hint_text: "Enter your Email"
                multiline: False
                focus: True
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#add8e6")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
            rows: 1
            size_hint: .4, .05
            pos_hint: {"center_x": .5, "center_y": .63}
            TextInput:
                background_color: 1, 1, 1, 0
                id: name
                hint_text: "Enter your Full Name"
                multiline: False
                focus: True
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#add8e6")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
            rows: 1
            size_hint: .4, .05
            pos_hint: {"center_x": .5, "center_y": .56}
            TextInput:
                background_color: 1, 1, 1, 0
                id: std_id
                hint_text: "Enter Student Number"
                multiline: False
                focus: True
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#add8e6")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
            rows: 1
            size_hint: .4, .05
            pos_hint: {"center_x": .5, "center_y": .49}
            TextInput:
                background_color: 1, 1, 1, 0
                id: address
                hint_text: "Enter Full Address"
                multiline: False
                focus: True
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#add8e6")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
            rows: 1
            size_hint: .4, .05
            pos_hint: {"center_x": .5, "center_y": .42}
            TextInput:
                background_color: 1, 1, 1, 0
                id: phone_no
                hint_text: "Enter Phone Number"
                multiline: False
                focus: True

        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#add8e6") #if self.state == 'normal' else utils.get_color_from_hex("#9400d3")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
            rows: 1
            size_hint: .2, .05
            pos_hint: {'center_x': .5, 'center_y': .35}
            Button:
                text: "Register"
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                on_press: app.my_firebase.register()
                on_release: app.change_screen("dashboard_screen")


