<ProfileScreeen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#add8e6") #9400d3 #ffffff
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#338bab") #1478a7
                Rectangle:
                    size: self.size
                    pos: self.pos
            #dash board banner
            rows: 1
            #cols: 2
            size_hint: 1, .1
            pos_hint: {"center_x": .5, "center_y": .96}
            Label:
                #pos_hint: {"center_x": .5, "center_y": .9}
                size_hint: .1, .1
                text: "[b]Profile[/b]"
                markup: True
                id: dashboard_title
                color: 0, 0, 0, 1
                #Put label for the home page
        GridLayout:
            #back for dashboard screen
            rows: 1
            size_hint: .05, .05
            pos_hint: {"center_x": .03, "center_y": .96}
            ImageButton:
                source: "icons/back.jpg"
                on_press: app.change_screen("dashboard_screen")
        Image:
            #avatar
            id: avatar
            source: "icons/avatar-removebg-preview.png"
            size_hint: .15, .15
            pos_hint: {"center_x": .5, "center_y": .8}
            keep_ratio: True
        GridLayout:
            rows: 2
            size_hint: .5, .1
            pos_hint: {"center_x": .5, "center_y": .7}
            Label:
                id: std_name
                text: " "
                color: 0, 0, 0, 1
            Label:
                id: std_id
                text: " "
                color: 0, 0, 0, 1
        GridLayout:
            rows: 4
            cols: 2
            size_hint: .8, .2
            pos_hint: {"center_x": .5, "center_y": .4}
            Label:
                text: "Address"
                color: 0, 0, 0, 1
            Label:
                id: address
                text: " "
                color: 0, 0, 0, 1
            Label:
                text: "Email"
                color: 0, 0, 0, 1
            Label:
                id: email
                text: " "
                color: 0, 0, 0, 1
            Label:
                text: "Phone Number"
                color: 0, 0, 0, 1
            Label:
                id: phone_no
                text: " "
                color: 0, 0, 0, 1
            Label:
                text: "Change Password"
                color: 0, 0, 0, 1
            Label:
                id: pwd
                text: "//get password from database//"
                color: 0, 0, 0, 1
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#338bab") #1478a7
                Rectangle:
                    size: self.size
            pos: self.pos
            rows: 1
            size_hint: 1, .1
            pos_hint: {"center_x": .5, "center_y": .06}