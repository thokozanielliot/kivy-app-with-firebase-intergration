<DashBoardScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#add8e6") #9400d3 #ffffff
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#338bab") #1478a7
                Rectangle:
                    size: self.size
                    pos: self.pos
            #dash board banner
            rows: 1
            #cols: 2
            size_hint: 1, .1
            pos_hint: {"center_x": .5, "center_y": .96}
            Label:
                #pos_hint: {"center_x": .5, "center_y": .9}
                size_hint: .1, .1
                text: "[b]Dash Board[/b]"
                markup: True
                color: 0, 0, 0, 1
                id: dashboard_title
                #Put label for the home page
        ImageButton:
            #avatar
            id: avatar
            source: "icons/avatar-removebg-preview.png"
            size_hint: .15, .15
            pos_hint: {"center_x": .96, "center_y": .96}
            keep_ratio: True
            on_press: app.change_screen("profile_screen")

        GridLayout:
            #back for dashboard screen
            rows: 1
            size_hint: .05, .05
            pos_hint: {"center_x": .03, "center_y": .96}
            ImageButton:
                source: "icons/back.jpg"
                on_press: app.change_screen("signin_screen")
        GridLayout:
            rows: 2
            size_hint: .9, .2
            pos_hint: {"center_x": .5, "center_y": .8}
            Label:
                id: student_name_surname
                text: " "
                color: 0, 0, 0, 1
            Label:
                text: "Welcome to our Covid-19 Tracking Applcation"
                color: 0, 0, 0, 1
        GridLayout:
            rows: 4
            size_hint: .9, .1
            pos_hint: {"center_x": .5, "center_y": .6}
            Label:
                text: "Please make sure your contact details are up to date"
                color: 0, 0, 0, 1
            Label:
                text: "To do so click the profile button, on the top right of your screen "
                color: 0, 0, 0, 1
        #GridLayout:
        #    rows: 1
        #    size_hint: .1, .1
        #    pos_hint: {"center_x": .35, "center_y": .85}
        #    Image:
        #        source: "icons/waving2.gif"
        #        allow_stretch: False
        #        anim_loop: 0
        #        #anim_delay:
        GridLayout:
            rows: 2
            cols: 2
            size_hint: .8, .2
            pos_hint: {"center_x": .5, "center_y": .38}
            Label:
                text: "Last Test Date"
                color: 0, 0, 0, 1
            Label:
                id: lst_test_date
                text: " "
                color: 0, 0, 0, 1
            Label:
                text: "Last Test result"
                color: 0, 0, 0, 1
            Label:
                id: lst_test_result
                text: " "
                color: 0, 0, 0, 1
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#338bab")
                Rectangle:
                    size: self.size
            pos: self.pos
            rows: 1
            size_hint: 1, .1
            pos_hint: {"center_x": .5, "center_y": .06}
